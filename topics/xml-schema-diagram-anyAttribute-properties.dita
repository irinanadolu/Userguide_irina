<topic id="xml-schema-diagram-anyAttribute-properties">
  <title>xs:anyAttribute</title>
  <prolog>
    <metadata>
      <keywords>
        <indexterm>Design editing
            mode<indexterm>Components<indexterm>xs:anyAttribute</indexterm></indexterm></indexterm>
        <indexterm>XML Schemas<indexterm>Design mode
