<topic id="xml-schema-diagram-opencontent-properties">
  <title>xs:openContent</title>
  <prolog>
    <metadata>
      <keywords>
        <indexterm>Design editing
            mode<indexterm>Components<indexterm>xs:openContent</indexterm></indexterm></indexterm>
        <indexterm>XML Schemas<indexterm>Design mode
